# RefactorForge Environment Variables Template
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Server Configuration
BACKEND_PORT=8001
FRONTEND_PORT=8745
MEMORY_API_PORT=3721

# Database Configuration
DATABASE_PATH=./backend/refactorforge.db
DATABASE_TYPE=sqlite

# GitHub Integration (Optional)
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_LIMIT=100

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGIN=http://localhost:8745

# Memory System Configuration
MEMORY_API_URL=http://localhost:3721
MEMORY_SYSTEM_ENABLED=true
MEMORY_CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/refactorforge.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Performance
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=300

# Feature Flags
ENABLE_GITHUB_SCANNER=true
ENABLE_RECOMMENDATIONS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_SECURITY_AUDIT=true

# External Services (Optional)
# OpenAI API for enhanced recommendations
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=

# Development
HOT_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=false