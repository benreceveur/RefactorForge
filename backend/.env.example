# RefactorForge Backend Environment Configuration

# Server Configuration
PORT=8001
NODE_ENV=development

# GitHub API Configuration
# Get your token from: https://github.com/settings/tokens
# Required permissions: repo (for private repos) or public_repo (for public repos only)
GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Organization Settings
GITHUB_ORG=IntelliPact
DEFAULT_BRANCH=main

# Rate Limiting
GITHUB_RATE_LIMIT_BUFFER=100
SCAN_CONCURRENCY_LIMIT=5
MAX_FILES_PER_SCAN=50

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Database
DATABASE_PATH=./refactorforge.db

# Feature Flags
ENABLE_LIVE_SCANNING=true
ENABLE_PATTERN_CACHING=true
ENABLE_AUTO_RECOMMENDATIONS=true

# Automated Scanner Configuration
AUTO_SCANNER_ENABLED=false
AUTO_SCANNER_INTERVAL=60
# Scanner intervals in minutes (60 = scan every hour)

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100